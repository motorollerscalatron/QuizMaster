<%= form_for(@question) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :description, placeholder: " question..." %>
    <%= f.text_area :answer, placeholder: "answer..." %>
  </div>
  <%= f.submit "Create a quiz", class: "btn btn-primary" %>
<% end %>
